---
import type { Product } from "../utils/types";

const { product }: { product: Product } = Astro.props;
---

<div
  class="w-full flex flex-col justify-between bg-white border border-gray-200 rounded-lg shadow-sm hover:scale-105 transition-transform"
>
  <a href={`/product/${product.id}`}>
    <img
      transition:name={`product-${product.id}`}
      class="rounded-t-lg w-full aspect-square p-5 object-contain"
      src={product.image}
      alt="product image"
    />
    <h5 class="px-5 text-xl font-semibold tracking-tight text-gray-900 mb-5">
      {product.name}
    </h5>
  </a>
  <div class="px-5 pb-5">
    <div class="flex items-center justify-between gap-2">
      <p
        class="block text-sm font-medium rounded-md px-2 py-1 bg-primary-500 text-white"
      >
        {product.category.name}
      </p>
      <span class="text-2xl font-bold text-gray-900"
        >${new Intl.NumberFormat("es-CL").format(product.price)}</span
      >
    </div>
  </div>
</div>
